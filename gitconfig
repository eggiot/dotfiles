[user]
    name = Eliot Walker
    email = eliot@eliotjwalker.com

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an, %cr)%Creset' --abbrev-commit --date=relative
    co = checkout
    st = status -a
    praise = blame
    ci = commit
    stat = status

[mirror]
    summary = true

[apply]
    whitespace = strip

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[diff]
    rename = copy

[pager]
    color = true